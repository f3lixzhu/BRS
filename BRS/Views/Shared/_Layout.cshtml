<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Brands Reporting Service</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Scripts/adminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Open Iconic -->
    <link rel="stylesheet" href="~/Content/open-iconic/font/css/open-iconic-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/adminLTE/dist/css/adminlte.min.css">
    <!-- Sweet Alert 2 -->
    <link rel="stylesheet" href="~/Scripts/adminLTE/plugins/sweetalert2/sweetalert2.min.css">
    <!-- Site -->
    <link rel="stylesheet" href="~/Content/Site.css">
    <!-- JQuery UI -->
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link">
                        @if (!string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                        {
                            <b>@HttpContext.Current.User.Identity.Name</b>
                        }
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown"
                       href="#" aria-expanded="false">
                        <i class="oi oi-cog"></i>
                    </a>

                    <div class="dropdown-menu dropdown-menu-md-right dropdown-menu-right"
                         style="left: inherit; right: 0px;">
                        <a style="text-underline-position:below; cursor:pointer" class="dropdown-item" href="@Url.Action("ChangePassword","Home")">
                            <i class="oi oi-lock-locked"></i>
                            Change Password
                        </a>
                        <div class="dropdown-divider"></div>
                        <a style="text-underline-position:below; cursor:pointer" class="dropdown-item" href="@Url.Action("Logout","Home")">
                            <i class="oi oi-account-logout"></i>
                            Sign Out
                        </a>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        @Html.Action("NavMenu", "Home")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Brand Reporting Service</strong>
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> @HttpContext.Current.Application["Version"]
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/Scripts/adminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Scripts/adminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Scripts/adminLTE/dist/js/adminlte.js"></script>
    <!-- Site -->
    <script src="~/Scripts/site.js"></script>
    <!-- Aging Report -->
    <script src="~/Scripts/AgingReport.js"></script>
    <!-- Sweet Alert 2 -->
    <script src="~/Scripts/adminLTE/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- JQuery UI -->
    <script src="~/Scripts/jquery-ui-1.13.3.min.js"></script>
    <!-- OPTIONAL SCRIPTS -->
    @*<script src="~/Scripts/adminLTE/plugins/chart.js/Chart.min.js"></script>*@
    <!-- AdminLTE for demo purposes -->
    @*<script src="Scripts/adminLTE/dist/js/demo.js"></script>*@
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    @*<script src="~/Scripts/adminLTE/dist/js/pages/dashboard3.js"></script>*@

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        var success = '@TempData["suc"]';
        var error = '@TempData["err"]';
        var show =  '@TempData["show"]';
        var show1 = '@TempData["show1"]';
        var show2 = '@TempData["show2"]';
        var show3 = '@TempData["show3"]';
        if (success) {
            displayAlertSuccess(success);
        } else if (error && show1) {
            displayAlertError(error);
            $("#myBox").modal("show");
        } else if (error && show2) {
            displayAlertError(error);
            $("#myBox2").modal("show");
        } else if (error && show3) {
            displayAlertError(error);
            $("#myBox").modal("show");
            $("#filterBox").modal("show");
        } else if (error) {
            displayAlertError(error);
        } else if (show) {
            $("#myBox").modal("show");
            $("#filterBox").modal("show");
        }
    </script>
</body>
</html>