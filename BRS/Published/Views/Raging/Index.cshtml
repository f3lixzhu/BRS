@model BRS.Models.RagingData
@{
    ViewBag.Title = "Index";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="row mb-3 mt-3 text-right">
                    <div class="col-sm-5">
                        <h4 class="m-0"><b>Aging Report</b></h4>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-2">
                        Period :
                    </div>
                    <div class="col-md-4">
                        @Html.EditorFor(m => m.YMDate,
                        new
                        {
                            htmlAttributes = new
                            {
                                @readonly = "true",
                                @Value = Model.YMDate.ToString("yyyy.MM"),
                                @class = "form-control datepickerYM"
                            }
                        })
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-2">
                        Locations :
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <input type="button" value="Add" class="btn btn-primary" data-toggle="modal" data-target="#myBox" />&nbsp;&nbsp;
                            <input type="button" value="Clear" class="btn btn-danger btnDeleteLocations" />
                        </div>
                        <div class="row mt-2">
                            @Html.ListBoxFor(m => m.locationsModel.locations, Model.locationsModel.locationsList, new { @class = "form-control", @id = "locations" })
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-2">
                        Dimension :
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownList("dimsparam", ViewBag.DimensionParamSelectList as SelectList, "Select Field", new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-2">
                        Data :
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownList("dataparam", ViewBag.DataParamSelectList as SelectList, "Select Field", new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-sm-2">
                        Filter :
                    </div>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.filterField, ViewBag.DimensionFilterSelectList as SelectList, "Select Field", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.filterValue, Model.filterValueList, "Select Field", new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-4">
                        <input type="submit" id="btnGenerate" class="btn btn-primary" value="Load Report" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myBox">
    <div class="modal-dialog" style="max-width: 40%;" role="document">
        <div class="modal-content">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title">Locations List</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-responsive-xl table-head-fixed text-nowrap table-striped">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Location</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var loc in ViewBag.LocationsSelectList)
                                            {
                                                <tr>
                                                    <td width="15%">
                                                        <button type="button" id="@loc.Key" class="btn btn-primary form-control btnSelectLocations" data-dismiss="modal">+</button>
                                                    </td>
                                                    <td width="85%">@loc.Key</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

