@model BRS.Models.UserLibrary.UserData

@{
    ViewBag.Title = "Login";
    Layout = "../Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <h3>Brand Reporting Service</h3>
        </div>
        @if (TempData["AlertErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <Strong>Error !</Strong> @TempData["AlertErrorMessage"]
            </div>
        }
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <editform>
                @using (Html.BeginForm())
                {
                    @*@Html.AntiForgeryToken()*@
                    @Html.ValidationSummary(true)
                    <div class="row">
                        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        @Html.EditorFor(m => m.UserId, new { htmlAttributes = new { @class = "form-control", placeholder = "enter username" } })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="oi oi-person"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "enter password", type = "password" } })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="oi oi-lock-locked"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p class="text-danger" style="visibility:@Model.visibleErrorLogin">UserName or Password is invalid</p>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block float-right">
                        Sign In
                    </button>
                }
            </editform>
        </div>
    </div>
</div>